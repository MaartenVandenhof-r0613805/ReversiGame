<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:ViewModel="clr-namespace:ViewModel;assembly=ViewModel" x:Class="View.MainWindow"
        mc:Ignorable="d"
        xmlns:View="clr-namespace:View;assembly=View"
        Title="MainWindow" Height="auto" Width="auto" SizeToContent="WidthAndHeight" MinHeight="300px" MinWidth="400px" Background="CadetBlue">

    <DockPanel LastChildFill="True">
        <ContentControl Content="{Binding SelectedOptionPane.ViewModel}"/>
    </DockPanel>
    
</Window>
